---
import SpecialButton from "./SpecialButton.astro";

const { title, description, buttonText } = Astro.props;
---

<style>
	.service-card {
		background-color: rgb(34, 34, 34);
		border-radius: 8px;
		padding: 1.5rem;
		text-align: center;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: transform 0.2s;
	}
</style>
<div class="service-card">
	<h3>{title}</h3>
	<p>{description}</p>
	<SpecialButton text={buttonText} />
</div>