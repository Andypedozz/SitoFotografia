---
const { media } = Astro.props;
---

<div>
    <style>
        div {
            background: linear-gradient(180deg, #1e293b, #172033);
            border-radius: 12px;
            padding: 12px;
            color: #e5e7eb;
            box-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);

            display: flex;
            flex-direction: column;
            gap: 10px;

            transition:
                transform 0.2s,
                box-shadow 0.2s;
        }

        /* Hover card */
        div:hover {
            transform: translateY(-4px);
            box-shadow: 0 16px 36px rgba(0, 0, 0, 0.45);
        }

        /* Immagine */
        img {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
            background-color: #0f172a;
        }

        /* Titolo */
        p {
            margin: 0;
            font-size: 14px;
            font-weight: 500;
            color: #cbd5e1;
            line-height: 1.4;

            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
    <img src={media.url} alt="" width="200px" height="150px" />
    <p>{media.name}</p>
</div>
