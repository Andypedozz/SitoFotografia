---
import Anchor from "./Anchor.astro";
import Button from "./Button.astro";

const { title, buttons } = Astro.props;
---
<style>
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        overflow-y: auto;
        display: flex;
        background-color: #111827;
        flex-direction: column;
        width: 15%;
        border-right: 1px solid #475569;
    }

    h1 {
        color: white;
        text-align: center;
    }
    
    .sidebar nav {
        display: flex;
        flex-direction: column;
    }
</style>
<div class="sidebar">
    <div>
        <h1>{title}</h1>
    </div>
    <div class="menu">
        <nav>
            {buttons.map((btn: any) => <Button dataPage={btn.page} text={btn.text} />)}
            <Anchor href="/" text="Torna alla home"/>
        </nav>
    </div>
</div>
