  <script is:inline>
    // Script per interattività base
    document.addEventListener('DOMContentLoaded', function() {
      // Elementi DOM
      const mobileMenuBtn = document.getElementById('mobileMenuBtn');
      const sidebar = document.getElementById('sidebar');
      const navItems = document.querySelectorAll('.nav-item');
      const pageContents = document.querySelectorAll('.page-content');
      const currentSectionElement = document.getElementById('current-section');
      
      // Gestione menu mobile
      mobileMenuBtn.addEventListener('click', function() {
        sidebar.classList.toggle('active');
        mobileMenuBtn.innerHTML = sidebar.classList.contains('active') 
          ? '<i class="fas fa-times"></i>' 
          : '<i class="fas fa-bars"></i>';
      });
      
      // Funzione per cambiare pagina
      function switchPage(pageId) {
        // Nascondi tutti i contenuti delle pagine
        pageContents.forEach(page => page.classList.remove('active'));
        
        // Mostra il contenuto della pagina selezionata
        const targetPage = document.getElementById(`${pageId}-page`);
        if (targetPage) {
          targetPage.classList.add('active');
        }
        
        // Aggiorna il titolo della sezione
        const activeNavItem = document.querySelector(`.nav-item[data-page="${pageId}"]`);
        if (activeNavItem && currentSectionElement) {
          const pageTitle = activeNavItem.querySelector('span').textContent;
          currentSectionElement.textContent = pageTitle;
        }
      }
      
      // Gestione navigazione
      navItems.forEach(item => {
        item.addEventListener('click', function(e) {
          e.preventDefault();
          
          // Rimuovi classe active da tutti gli item
          navItems.forEach(nav => nav.classList.remove('active'));
          // Aggiungi classe active all'item cliccato
          this.classList.add('active');
          
          // Cambia pagina
          const pageId = this.getAttribute('data-page');
          switchPage(pageId);
          
          // Aggiorna il titolo della pagina
          const pageTitle = this.querySelector('span').textContent;
          document.querySelector('.header h1').innerHTML = 
            `<i class="fas fa-tachometer-alt"></i> ${pageTitle}`;
          
          // Chiudi il menu mobile su dispositivi piccoli
          if (window.innerWidth <= 1024) {
            sidebar.classList.remove('active');
            mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
          }
        });
      });
      
      // Inizializzazione: mostra la homepage di default
      switchPage('homepage');
      
      // Logica per pulsanti di azione nella tabella
      const editButtons = document.querySelectorAll('.btn-edit');
      const deleteButtons = document.querySelectorAll('.btn-delete');
      
      editButtons.forEach(btn => {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          const row = this.closest('tr');
          const id = row.cells[0].textContent.trim();
          const name = row.cells[1].textContent;
          const year = row.cells[2].textContent;
          
          // Popola il form di modifica
          document.getElementById('edit-id').value = id;
          document.getElementById('edit-name').value = name;
          document.getElementById('edit-year').value = year;
          document.getElementById('edit-description').value = `Descrizione del progetto ${name}`;
          
          // Mostra notifica
          showNotification(`Modifica progetto #${id}: ${name} (${year})`, 'info');
        });
      });
      
      deleteButtons.forEach(btn => {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          const row = this.closest('tr');
          const id = row.cells[0].textContent.trim();
          const name = row.cells[1].textContent;
          
          // Popola il form di eliminazione
          document.getElementById('delete-id').value = id;
          
          if (confirm(`Sei sicuro di voler eliminare il progetto #${id}: ${name}?`)) {
            row.remove();
            showNotification(`Progetto #${id} eliminato con successo!`, 'success');
          }
        });
      });
      
      // Gestione form
      const forms = document.querySelectorAll('form');
      forms.forEach(form => {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          
          if (this.querySelector('#project-name')) {
            const name = document.getElementById('project-name').value;
            const year = document.getElementById('project-year').value;
            showNotification(`Progetto "${name}" (${year}) aggiunto con successo!`, 'success');
            this.reset();
          }
          
          if (this.querySelector('#delete-id') && document.getElementById('delete-id').value) {
            const id = document.getElementById('delete-id').value;
            showNotification(`Progetto #${id} eliminato con successo!`, 'success');
            document.getElementById('delete-id').value = '';
          }
          
          if (this.querySelector('#homepage-title')) {
            showNotification(`Impostazioni homepage salvate con successo!`, 'success');
          }
          
          if (this.querySelector('#media-file')) {
            showNotification(`File caricato con successo!`, 'success');
            this.reset();
          }
        });
      });
      
      // Aggiorna valore slider qualità immagini
      const imageQualitySlider = document.getElementById('image-quality');
      if (imageQualitySlider) {
        const qualityValue = imageQualitySlider.nextElementSibling;
        imageQualitySlider.addEventListener('input', function() {
          qualityValue.textContent = `${this.value}%`;
        });
      }
      
      // Funzione per mostrare notifiche
      function showNotification(message, type = 'info') {
        // Crea elemento notifica
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.style.cssText = `
          position: fixed;
          top: 20px;
          right: 20px;
          background: ${type === 'success' ? '#10b981' : type === 'danger' ? '#ef4444' : '#3b82f6'};
          color: white;
          padding: 1rem 1.5rem;
          border-radius: 6px;
          box-shadow: var(--shadow);
          z-index: 1000;
          animation: slideIn 0.3s ease;
        `;
        
        notification.innerHTML = `
          <div style="display: flex; align-items: center; gap: 0.75rem;">
            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : 'info-circle'}"></i>
            <span>${message}</span>
          </div>
        `;
        
        document.body.appendChild(notification);
        
        // Rimuovi la notifica dopo 3 secondi
        setTimeout(() => {
          notification.style.animation = 'slideOut 0.3s ease';
          setTimeout(() => {
            if (notification.parentNode) {
              notification.parentNode.removeChild(notification);
            }
          }, 300);
        }, 3000);
        
        // Aggiungi animazioni CSS
        if (!document.querySelector('#notification-styles')) {
          const style = document.createElement('style');
          style.id = 'notification-styles';
          style.textContent = `
            @keyframes slideIn {
              from {
                transform: translateX(100%);
                opacity: 0;
              }
              to {
                transform: translateX(0);
                opacity: 1;
              }
            }
            
            @keyframes slideOut {
              from {
                transform: translateX(0);
                opacity: 1;
              }
              to {
                transform: translateX(100%);
                opacity: 0;
              }
            }
          `;
          document.head.appendChild(style);
        }
      }
      
      // Chiudi il menu se si clicca fuori (solo mobile)
      document.addEventListener('click', function(e) {
        if (window.innerWidth <= 1024 && 
            !sidebar.contains(e.target) && 
            !mobileMenuBtn.contains(e.target) && 
            sidebar.classList.contains('active')) {
          sidebar.classList.remove('active');
          mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
        }
      });
    });
  </script>
  </div>
</Layout>
