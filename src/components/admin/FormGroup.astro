---
const { title, fields, onSubmit } = Astro.props;
---

<div>
    <style>
        /* Reset minimo */
        * {
            box-sizing: border-box;
            font-family:
                system-ui,
                -apple-system,
                BlinkMacSystemFont,
                "Segoe UI",
                sans-serif;
        }

        /* Card container */
        div {
            max-width: 420px;
            padding: 2%;
            background: linear-gradient(180deg, #1e293b, #172033);
            border-radius: 14px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.45);
            color: #ffffff;
            height: fit-content;
        }

        /* Titolo */
        h1 {
            font-size: 22px;
            font-weight: 600;
            margin: 0 0 24px;
            display: flex;
            align-items: center;
            gap: 10px;
            border-bottom: 2px solid #3b82f6;
            padding-bottom: 12px;
        }

        /* Form layout */
        form {
            display: flex;
            flex-direction: column;
            gap: 18px;
        }

        /* Gruppo campo */
        .form-group {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        /* Label */
        label {
            font-size: 14px;
            font-weight: 500;
            color: #cbd5e1;
        }

        /* Input */
        input,
        textarea,
        select {
            background-color: #334155;
            border: 1px solid #475569;
            border-radius: 8px;
            padding: 12px 14px;
            font-size: 15px;
            color: #ffffff;
            outline: none;
            transition:
                border-color 0.2s,
                box-shadow 0.2s;
        }

        input::placeholder {
            color: #94a3b8;
        }

        /* Focus */
        input:focus,
        textarea:focus,
        select:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.35);
        }

        /* Bottone */
        button {
            margin-top: 16px;
            padding: 14px;
            font-size: 16px;
            font-weight: 600;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            background: #3b82f6;
            color: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        /* Hover bottone */
        button:hover {
            background: #2563eb;
            box-shadow: 0 10px 25px rgba(59, 130, 246, 0.4);
        }

        /* Active */
        button:active {
            transform: translateY(1px);
        }
    </style>
    <h1>{title}</h1>
    <form action="">
        {
            fields.map((field) => (
                <div class="form-group">
                    <label for={field.id}>{field.label}</label>
                    <input
                        type={field.type}
                        id={field.id}
                        placeholder={field.placeholder}
                    />
                </div>
            ))
        }
        <button>Conferma</button>
    </form>
</div>
