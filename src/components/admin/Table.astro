---
const { projects } = Astro.props;
---

<style>
  /* Container card */
  .table-container {
    margin: 2%;
    background: linear-gradient(180deg, #1e293b, #172033);
    border-radius: 14px;
    padding: 16px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.45);
    overflow-x: auto;
  }

  /* Table */
  table {
    width: 100%;
    min-width: 640px;
    border-collapse: collapse;
    color: #e5e7eb;
  }

  /* Header */
  thead th {
    background: #0f172a;
    padding: 14px 16px;
    text-align: left;
    font-size: 14px;
    font-weight: 600;
    color: #cbd5e1;
    border-bottom: 2px solid #334155;
  }

  /* Rows */
  tbody tr {
    transition: background 0.2s;
  }

  tbody tr:hover {
    background: rgba(59, 130, 246, 0.08);
  }

  /* Cells */
  td {
    padding: 14px 16px;
    border-bottom: 1px solid #334155;
    font-size: 15px;
  }

  /* Badge ID */
  .badge {
    display: inline-block;
    min-width: 32px;
    text-align: center;
    padding: 4px 10px;
    border-radius: 999px;
    font-size: 12px;
    font-weight: 600;
    background: #334155;
    color: #e5e7eb;
  }

  /* Actions */
  .table-actions {
    display: flex;
    gap: 8px;
  }

  /* Icon buttons */
  .btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    border: none;
    background: transparent;
    color: #94a3b8;
    cursor: pointer;
    transition:
      background 0.2s,
      color 0.2s,
      transform 0.1s;
  }

  .btn-icon:hover {
    background: #334155;
  }

  .btn-icon:active {
    transform: translateY(1px);
  }

  /* Edit */
  .btn-edit:hover {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.15);
  }

  /* Delete */
  .btn-delete:hover {
    color: #ef4444;
    background: rgba(239, 68, 68, 0.15);
  }

  /* Responsive */
  @media (max-width: 640px) {
    td,
    th {
      padding: 12px;
    }
  }
</style>
<div class="table-container">
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Anno</th>
        <th>Azioni</th>
      </tr>
    </thead>
    <tbody>
      {
        projects.map((project) => (
          <tr>
            <td>
              <span class="badge">{project.id}</span>
            </td>
            <td>{project.nome}</td>
            <td>{project.anno}</td>
            <td>
              <div class="table-actions">
                <button class="btn-icon btn-edit" title="Modifica">
                  <i class="fas fa-edit" />
                </button>
                <button class="btn-icon btn-delete" title="Elimina">
                  <i class="fas fa-trash" />
                </button>
              </div>
            </td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
<style>
  .table-container {
    overflow-x: auto;
    border-radius: 8px;
    border: 1px solid var(--border-color);
  }

  table {
    width: 100%;
    border-collapse: collapse;
    min-width: 600px;
  }

  th {
    background: var(--bg-tertiary);
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    color: var(--text-secondary);
    border-bottom: 2px solid var(--border-color);
  }

  td {
    padding: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  tr:hover {
    background: rgba(59, 130, 246, 0.05);
  }

  .badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    background: var(--bg-tertiary);
    color: var(--text-secondary);
  }

  .table-actions {
    display: flex;
    gap: 0.5rem;
  }

  .btn-icon {
    background: none;
    border: none;
    color: var(--text-tertiary);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .btn-icon:hover {
    background: var(--bg-tertiary);
  }

  .btn-edit:hover {
    color: #3b82f6;
  }

  .btn-delete:hover {
    color: #ef4444;
  }
</style>
