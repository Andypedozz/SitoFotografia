---
const { href, text } = Astro.props;
---
<style>
    .admin-anchor {
        padding: 10px 20px;
        background-color: #111827;
        color: rgb(255, 255, 255);
        border: none;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
        text-align: center;
    }
    
    .admin-anchor:hover {
        color: rgb(42, 85, 204);
        background-color: #1c298b;
    }
</style>
<a class="admin-anchor" href={href}>{text}</a>