---
const { project } = Astro.props;
---
<style>
    .gallery-item {
        position: relative;
        cursor: pointer;
        overflow: hidden;
        border-radius: var(--radius);
        height: 500px; /* Aumentata da 400px a 500px */
        transition: var(--transition-slow);
        aspect-ratio: 3/4; /* Proporzione pi√π verticale */
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition-slow);
        filter: grayscale(100%) brightness(0.9);
    }

    .gallery-item:hover {
        transform: translateY(-15px);
        box-shadow: var(--shadow);
    }

    .gallery-item:hover img {
        filter: grayscale(0%) brightness(1);
        transform: scale(1.08);
    }

    .gallery-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 25px;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
        opacity: 0;
        transition: var(--transition-slow);
        transform: translateY(20px);
    }

    .gallery-item:hover .gallery-overlay {
        opacity: 1;
        transform: translateY(0);
    }

    .gallery-overlay h3 {
        font-size: 1.5rem;
        margin-bottom: 8px;
    }

    .gallery-overlay p {
        font-size: 1rem;
        color: var(--text-gray);
    }
</style>
<div class="gallery-item fade-in" onclick=`window.location.href = '/projects/${project.slug}'`>
    <img src={project.copertina} alt="Fotografia moda" />
    <div class="gallery-overlay">
        <h3>{project.nome}</h3>
        <p>{project.descrizione}</p>
    </div>
</div>
