---
const { 
  image, 
  title, 
  link, 
  description, 
  height = "640px", // Altezza fissa
  animate = false
} = Astro.props;
---

<article 
  class={`photocard ${animate ? 'animate-on-scroll' : ''}`} 
  data-animate={animate}
>
  <div class="photocard-image" style={`height:${height};`}>
    <img src={image} alt={title} />
  </div>

  {description || title || link ? (
    <div class="photocard-content">
      <h3>{link ? <a href={link}>{title}</a> : title}</h3>
      {description ? <p>{description}</p> : null}
    </div>
  ) : null}
</article>

<style>
.photocard {
  background-color: #1e1e1e;
  border-radius: 0;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0,0,0,0.5);
  transition: transform 0.3s, box-shadow 0.3s;
  cursor: pointer;
  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 400px; /* Larghezza massima per l'altezza di 640px */

  /* stato iniziale per animazione */
  opacity: 0;
  transform: translateY(40px);
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

/* Assicura che l'immagine non superi mai i limiti */
.photocard-image {
  width: 100%;
  height: var(--card-height, 640px);
  overflow: hidden;
  flex-shrink: 0; /* Impedisce il ridimensionamento */
}

.photocard-image img {
  width: 100%;
  height: 100%;
  object-fit: cover; /* Mantiene l'aspect ratio senza distorsioni */
  filter: grayscale(100%);
  transition: filter 0.3s;
}

/* Stato animato quando visibile */
.photocard.visible {
  opacity: 1;
  transform: translateY(0);
}

/* hover classico */
.photocard:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 28px rgba(0,0,0,0.7);
}

/* Mantieni l'effetto hover anche quando Ã¨ animato */
.photocard.visible:hover {
  transform: translateY(-5px);
}

.photocard:hover .photocard-image img {
  filter: grayscale(0%);
}

/* --- CONTENUTO --- */
.photocard-content {
  padding: 16px;
  color: #f0f0f0;
  flex-grow: 1;
}

.photocard-content h3 {
  margin: 0 0 8px 0;
  font-size: 1.2rem;
  font-weight: 600;
}

.photocard-content p {
  margin: 0;
  font-size: 0.95rem;
  color: #ccc;
}

.photocard-content a {
  color: #f0f0f0;
  text-decoration: none;
}

/* Stili responsive */
@media (max-width: 639px) {
  .photocard {
    max-width: 100%; /* Su mobile occupa tutta la larghezza disponibile */
  }
  
  .photocard-image {
    max-height: 500px; /* Riduci leggermente su mobile se necessario */
  }
}

@media (min-width: 640px) and (max-width: 1023px) {
  .photocard {
    max-width: 350px; /* Riduci leggermente per tablet */
  }
  
  .photocard-image {
    height: 600px; /* Riduci proporzionalmente */
  }
}
</style>

<script>
// Il JavaScript rimane invariato
document.addEventListener('DOMContentLoaded', () => {
  const photoCards = document.querySelectorAll('.photocard[data-animate="true"]');
  
  if (photoCards.length === 0) return;
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  });
  
  photoCards.forEach(card => {
    observer.observe(card);
  });
});
</script>