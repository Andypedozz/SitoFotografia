---
const { 
  image, 
  title, 
  link, 
  description, 
  width = "300px", 
  height = "200px", 
  animate = false // nuova prop per abilitare animazione all'apparizione
} = Astro.props;
---

<article 
  class={`photocard ${animate ? 'animate-on-scroll' : ''}`} 
  style={`width:${width};`}
  data-animate={animate}
>
  <div class="photocard-image" style={`height:${height};`}>
    <img src={image} alt={title} />
  </div>

  {description || title || link ? (
    <div class="photocard-content">
      <h3>{link ? <a href={link}>{title}</a> : title}</h3>
      {description ? <p>{description}</p> : null}
    </div>
  ) : null}
</article>

<style>
.photocard {
  background-color: #1e1e1e;
  border-radius: 0;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0,0,0,0.5);
  transition: transform 0.3s, box-shadow 0.3s;
  cursor: pointer;
  display: flex;
  flex-direction: column;

  /* stato iniziale per animazione */
  opacity: 0;
  transform: translateY(40px);
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
}

/* Stato animato quando visibile */
.photocard.visible {
  opacity: 1;
  transform: translateY(0);
}

/* hover classico */
.photocard:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 28px rgba(0,0,0,0.7);
}

/* Mantieni l'effetto hover anche quando è animato */
.photocard.visible:hover {
  transform: translateY(-5px);
}

.photocard-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(100%);
  transition: filter 0.3s;
}

.photocard:hover .photocard-image img {
  filter: grayscale(0%);
}

/* --- CONTENUTO --- */
.photocard-content {
  padding: 16px;
  color: #f0f0f0;
}

.photocard-content h3 {
  margin: 0 0 8px 0;
  font-size: 1.2rem;
  font-weight: 600;
}

.photocard-content p {
  margin: 0;
  font-size: 0.95rem;
  color: #ccc;
}

.photocard-content a {
  color: #f0f0f0;
  text-decoration: none;
}
</style>

<script>
// Attendi che il DOM sia completamente caricato
document.addEventListener('DOMContentLoaded', () => {
  // Seleziona tutte le card che hanno l'attributo data-animate="true"
  const photoCards = document.querySelectorAll('.photocard[data-animate="true"]');
  
  // Se non ci sono card da animare, esci
  if (photoCards.length === 0) return;
  
  // Crea un IntersectionObserver per rilevare quando le card entrano nel viewport
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      // Se la card è nel viewport, aggiungi la classe 'visible'
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
        
        // Opzionale: smetti di osservare dopo che l'animazione è stata attivata
        // per migliorare le performance
        // observer.unobserve(entry.target);
      } else {
        // Opzionale: rimuovi la classe quando esce dal viewport
        // per ri-animare ogni volta che rientra
        // entry.target.classList.remove('visible');
      }
    });
  }, {
    // Opzioni dell'Observer
    threshold: 0.1, // Attiva quando almeno il 10% della card è visibile
    rootMargin: '0px 0px -50px 0px' // Riduce leggermente il viewport per un effetto più naturale
  });
  
  // Inizia a osservare ogni card
  photoCards.forEach(card => {
    observer.observe(card);
  });
});
</script>