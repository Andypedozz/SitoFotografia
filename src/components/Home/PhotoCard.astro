---
const { image, title, link, description, width = "300px", height = "200px" } = Astro.props;
---

<article class="photocard" style={`width:${width};`}>
  <div class="photocard-image" style={`height:${height};`}>
    <img src={image} alt={title} />
  </div>
  {description || title || link ? <div class="photocard-content">
    <h3><a href={link}>{title}</a></h3>
  </div> : null}
</article>

<style>
.photocard {
  background-color: #1e1e1e; /* sfondo dark */
  border-radius: 0;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0,0,0,0.5);
  transition: transform 0.3s, box-shadow 0.3s;
  cursor: pointer;
  display: flex;
  flex-direction: column;
}

.photocard:hover {
  transform: translateY(-5px);
  box-shadow: 0 12px 28px rgba(0,0,0,0.7);
}

.photocard-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: grayscale(100%);
  transition: filter 0.3s;
}

.photocard:hover .photocard-image img {
  filter: grayscale(0%);
}

.photocard-content {
  padding: 16px;
  color: #f0f0f0;
}

.photocard-content h3 {
  margin: 0 0 8px 0;
  font-size: 1.2rem;
  font-weight: 600;
}

.photocard-content p {
  margin: 0;
  font-size: 0.95rem;
  color: #ccc;
}

.photocard-content a {
  color: #f0f0f0;
  text-decoration: none;
}
</style>
