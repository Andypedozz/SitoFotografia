---
import ProjectCard from "./ProjectCard.astro";

export interface Props {
    homeProjects: any[];
}
const { homeProjects = [] } = Astro.props;
---
<section class="section gallery-section" id="gallery">
    <div class="container">
        <div class="section-title">
            <h1>I nostri ultimi lavori</h1>
        </div>
        
        <div class="gallery">
            {homeProjects.map((project: any) => <ProjectCard project={project}/>)}
        </div>
        
        <div class="center-btn">
            <a href="#gallery" class="btn">Vedi tutti i progetti</a>
        </div>
    </div>
</section>