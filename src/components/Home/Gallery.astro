<style>
    .gallery-section {
        background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgb(22, 22, 22) 100%);
    }

    .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 35px;
        margin-bottom: 50px;
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: var(--radius);
        height: 500px; /* Aumentata da 400px a 500px */
        transition: var(--transition-slow);
        aspect-ratio: 3/4; /* Proporzione pi√π verticale */
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition-slow);
        filter: grayscale(100%) brightness(0.9);
    }

    .gallery-item:hover {
        transform: translateY(-15px);
        box-shadow: var(--shadow);
    }

    .gallery-item:hover img {
        filter: grayscale(0%) brightness(1);
        transform: scale(1.08);
    }

    .center-btn {
        text-align: center;
    }
</style>
<section class="section gallery-section" id="gallery">
    <div class="container">
        <div class="section-title">
            <h1>I nostri ultimi lavori</h1>
        </div>

        <div class="gallery">
            {
                homeProjects.map((project: any) => (
                    <ProjectCard project={project} />
                ))
            }
        </div>

        <div class="center-btn">
            <a href="#gallery" class="btn">Vedi tutti i progetti</a>
        </div>
    </div>
</section>

