<style>
    .form-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .form-card {
        width: 100%;
        max-width: 600px;

        /* ðŸ”¥ PiÃ¹ trasparente */
        background: rgba(34, 34, 34, 0.65);

        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);

        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 40px;

        border: 1px solid rgba(255, 255, 255, 0.06);
    }

    .form-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 30px;
        text-align: center;
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 22px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    label {
        font-size: 0.9rem;
        color: var(--text-gray);
    }

    input,
    textarea {
        /* ðŸ”¥ Trasparenza input */
        background: rgba(0, 0, 0, 0.6);

        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: var(--radius);
        padding: 14px;
        color: var(--text-light);
        font-size: 0.95rem;
        transition: var(--transition);
    }

    textarea {
        min-height: 150px;
        resize: vertical;
    }

    input::placeholder,
    textarea::placeholder {
        color: rgba(255, 255, 255, 0.35);
    }

    input:focus,
    textarea:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 2px rgba(164, 0, 0, 0.25);
        background: rgba(0, 0, 0, 0.75);
    }

    .form-actions {
        margin-top: 10px;
        display: flex;
        justify-content: flex-end;
    }

    /* Mobile */
    @media (max-width: 768px) {
        .form-card {
            padding: 30px 20px;
        }

        .form-title {
            font-size: 1.6rem;
        }
    }
</style>

<div class="container section">
    <div class="form-wrapper fade-in">
        <div class="form-card">
            <div class="form-title">Contattami</div>

            <form action="">
                <div class="form-group">
                    <label>Email</label>
                    <input
                        type="email"
                        name="email"
                        placeholder="email@esempio.com"
                        required
                    />
                </div>

                <div class="form-group">
                    <label>Oggetto</label>
                    <input
                        type="text"
                        name="oggetto"
                        placeholder="Oggetto del messaggio"
                        required
                    />
                </div>

                <div class="form-group">
                    <label>Messaggio</label>
                    <textarea
                        name="messaggio"
                        placeholder="Scrivi qui il tuo messaggio..."
                        required></textarea>
                </div>

                <div class="form-actions">
                    <button class="btn" type="submit">Invia messaggio</button>
                </div>
            </form>
        </div>
    </div>
</div>
