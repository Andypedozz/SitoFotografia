---
import PhotoCard from "./PhotoCard.astro";
import Section from "./Section.astro";
import SpecialButton from "./SpecialButton.astro";
---

<style>
    .gallery-container {
        width: 100%;
        max-width: 1600px; /* Limite massimo */
        margin: 0 auto;
        padding: 0 20px; /* Padding laterale */
        box-sizing: border-box;
    }

    .gallery {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 30px;
        justify-items: center; /* Centra le card nella griglia */
    }

    @media (min-width: 640px) {
        .gallery {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .gallery {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @media (min-width: 1280px) {
        .gallery {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    .explore-div {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    h1 {
        text-align: center;
        padding: 40px 0 40px 0;
    }
</style>
<Section>
    <h1>I nostri ultimi lavori</h1>
    <div class="gallery-container">
        <div class="gallery">
            <!-- Rimuovi width dalle props, mantieni solo height -->
            <PhotoCard image="/images/opia.jpg" height="640px" animate={true}/>
