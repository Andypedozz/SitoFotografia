<style>
    /* Mantieni lo stesso stile dell'homepage */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary: #947752;
        --primary-dark: #695234;
        --dark: #000000;
        --dark-gray: #222222;
        --light-gray: #333333;
        --text-light: #ffffff;
        --text-gray: #cccccc;
        --transition: all 0.3s ease;
        --transition-slow: all 0.5s ease;
        --shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
        --radius: 8px;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--dark);
        color: var(--text-light);
        margin: 0;
        line-height: 1.6;
        overflow-x: hidden;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    button {
        cursor: pointer;
        font-family: inherit;
    }

    .container {
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section {
        padding: 80px 0;
    }

    .section-title {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        margin-bottom: 50px;
    }

    .section-title h1,
    .section-title h2 {
        font-size: 2.5rem;
        text-align: center;
        font-weight: 600;
    }

    .btn {
        display: inline-block;
        padding: 12px 28px;
        background-color: var(--primary);
        color: var(--text-light);
        border: none;
        border-radius: var(--radius);
        font-size: 16px;
        font-weight: 600;
        transition: var(--transition);
    }

    .btn:hover {
        background-color: var(--primary-dark);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-outline {
        background-color: transparent;
        border: 2px solid var(--primary);
    }

    .btn-outline:hover {
        background-color: var(--primary);
    }

    /* Header */
    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 20px 5%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.9);
        z-index: 1000;
        transition: var(--transition);
    }

    header.scrolled {
        padding: 15px 5%;
        backdrop-filter: blur(10px);
        background-color: rgba(0, 0, 0, 0.85);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .logo img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
    }

    .logo-text {
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .logo-text span {
        color: var(--primary);
    }

    nav {
        display: flex;
        align-items: center;
        gap: 25px;
    }

    nav a {
        font-weight: 500;
        position: relative;
        padding: 5px 0;
    }

    nav a:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background-color: var(--primary);
        transition: var(--transition);
    }

    nav a:hover:after {
        width: 100%;
    }

    .mobile-toggle {
        display: none;
        font-size: 1.5rem;
        cursor: pointer;
    }

    /* Hero del Progetto */
    .project-hero {
        height: 70vh;
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 0 20px;
        position: relative;
    }

    .project-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8));
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

    .project-hero h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.2;
    }

    .project-hero p {
        font-size: 1.3rem;
        color: var(--text-gray);
        margin-bottom: 30px;
    }

    .project-meta {
        display: flex;
        justify-content: center;
        gap: 30px;
        flex-wrap: wrap;
        margin-top: 30px;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--text-gray);
    }

    .meta-item i {
        color: var(--primary);
    }

    /* Project Details */
    .project-details {
        background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgb(22, 22, 22) 100%);
    }

    .details-content {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 60px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .project-description h2 {
        font-size: 2rem;
        margin-bottom: 25px;
        color: var(--primary);
    }

    .project-description p {
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--text-gray);
        margin-bottom: 20px;
    }

    .project-sidebar {
        background-color: rgba(34, 34, 34, 0.7);
        border-radius: var(--radius);
        padding: 30px;
        height: fit-content;
    }

    .sidebar-title {
        font-size: 1.4rem;
        margin-bottom: 20px;
        color: var(--primary);
        border-bottom: 2px solid var(--primary);
        padding-bottom: 10px;
    }

    .info-list {
        list-style: none;
    }

    .info-list li {
        margin-bottom: 15px;
        padding-bottom: 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .info-label {
        font-weight: 600;
        color: var(--primary);
        display: block;
        margin-bottom: 5px;
    }

    .info-value {
        color: var(--text-gray);
    }

    /* GALLERIA MISTA MASONRY-STYLE */
    .project-gallery {
        background: radial-gradient(circle at center, rgba(0, 0, 0, 1) 0%, rgb(20, 20, 20) 70%, rgba(0, 0, 0, 1) 100%);
        position: relative;
        overflow: hidden;
    }

    .project-gallery::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--primary), transparent);
        z-index: 1;
    }

    .masonry-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        grid-auto-rows: 200px;
        grid-gap: 25px;
        grid-auto-flow: dense;
    }

    /* Elementi della galleria - stili comuni */
    .gallery-item {
        position: relative;
        border-radius: var(--radius);
        overflow: hidden;
        transition: var(--transition-slow);
        background-color: var(--dark-gray);
        cursor: pointer;
        box-shadow: var(--shadow);
    }

    .gallery-item:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(148, 119, 82, 0.25);
        z-index: 10;
    }

    /* Dimensioni variabili per layout irregolare */
    .gallery-item.large {
        grid-column: span 2;
        grid-row: span 2;
        height: 100%;
    }

    .gallery-item.medium {
        grid-column: span 1;
        grid-row: span 2;
        height: 100%;
    }

    .gallery-item.small {
        grid-column: span 1;
        grid-row: span 1;
        height: 100%;
    }

    /* Contenuto immagine */
    .gallery-item.image-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition-slow);
        filter: brightness(0.9);
    }

    .gallery-item.image-item:hover img {
        filter: brightness(1.1);
        transform: scale(1.05);
    }

    /* Contenuto video */
    .gallery-item.video-item .video-wrapper {
        width: 100%;
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .gallery-item.video-item video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        background-color: #000;
    }

    /* Overlay per tutti gli elementi */
    .item-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
        padding: 25px;
        transform: translateY(100%);
        transition: var(--transition-slow);
        z-index: 2;
    }

    .gallery-item:hover .item-overlay {
        transform: translateY(0);
    }

    .item-type {
        position: absolute;
        top: 15px;
        right: 15px;
        background-color: var(--primary);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        z-index: 3;
        opacity: 0.9;
    }

    .item-caption {
        color: var(--text-light);
        font-size: 1rem;
        line-height: 1.4;
        margin-bottom: 10px;
    }

    .item-title {
        color: var(--primary);
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 5px;
    }

    /* Play button per video */
    .video-play-btn {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 70px;
        height: 70px;
        background-color: rgba(148, 119, 82, 0.9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.8rem;
        z-index: 2;
        opacity: 0;
        transition: var(--transition);
    }

    .gallery-item.video-item:hover .video-play-btn {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1.1);
    }

    /* Lightbox/modal per visualizzazione fullscreen */
    .media-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.95);
        z-index: 10000;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .media-modal.active {
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 1;
    }

    .modal-content {
        max-width: 90%;
        max-height: 90%;
        position: relative;
    }

    .modal-content img,
    .modal-content video {
        max-width: 100%;
        max-height: 80vh;
        border-radius: var(--radius);
    }

    .modal-close {
        position: absolute;
        top: -40px;
        right: 0;
        background: none;
        border: none;
        color: white;
        font-size: 2rem;
        cursor: pointer;
        padding: 10px;
    }

    /* Navigation */
    .project-navigation {
        background-color: var(--dark-gray);
        padding: 60px 0;
        position: relative;
        overflow: hidden;
    }

    .project-navigation::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(148, 119, 82, 0.5), transparent);
    }

    .nav-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .nav-link {
        display: flex;
        align-items: center;
        gap: 15px;
        padding: 20px;
        background-color: rgba(0, 0, 0, 0.3);
        border-radius: var(--radius);
        transition: var(--transition);
        width: 45%;
        border: 1px solid transparent;
    }

    .nav-link:hover {
        background-color: rgba(148, 119, 82, 0.1);
        transform: translateX(-10px);
        border-color: var(--primary);
    }

    .nav-link.next:hover {
        transform: translateX(10px);
    }

    .nav-link.prev {
        text-align: left;
    }

    .nav-link.next {
        text-align: right;
        flex-direction: row-reverse;
    }

    .nav-label {
        font-size: 0.9rem;
        color: var(--text-gray);
        margin-bottom: 5px;
    }

    .nav-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--text-light);
    }

    /* CTA */
    .cta-section {
        background-image: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.9)), url('https://images.unsplash.com/photo-1542744095-fcf48d80b0fd?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        text-align: center;
        position: relative;
    }

    .cta-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, transparent, rgba(148, 119, 82, 0.1), transparent);
        pointer-events: none;
    }

    .cta-content {
        max-width: 800px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
    }

    .cta-content h1 {
        font-size: 3rem;
        margin-bottom: 25px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
    }

    .cta-content p {
        font-size: 1.2rem;
        color: var(--text-gray);
        margin-bottom: 40px;
    }

    /* Footer */
    footer {
        background-color: #070707;
        padding: 60px 0 30px;
        position: relative;
    }

    footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--primary), transparent);
    }

    .footer-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 40px;
        margin-bottom: 40px;
    }

    .footer-col {
        flex: 1;
        min-width: 250px;
    }

    .footer-col h3 {
        font-size: 1.3rem;
        margin-bottom: 20px;
        color: var(--primary);
    }

    .footer-col p {
        color: var(--text-gray);
        margin-bottom: 10px;
    }

    .social-links {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background-color: var(--light-gray);
        border-radius: 50%;
        transition: var(--transition);
    }

    .social-links a:hover {
        background-color: var(--primary);
        transform: translateY(-3px);
    }

    .copyright {
        text-align: center;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-gray);
        font-size: 0.9rem;
    }

    /* Animazioni */
    .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.8s ease, transform 0.8s ease;
    }

    .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive per galleria masonry */
    @media (max-width: 1200px) {
        .masonry-grid {
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            grid-gap: 20px;
        }
        
        .gallery-item.large {
            grid-column: span 2;
        }
    }

    @media (max-width: 1024px) {
        .details-content {
            grid-template-columns: 1fr;
            gap: 40px;
        }

        .project-hero h1 {
            font-size: 2.8rem;
        }

        .masonry-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }
        
        .gallery-item.large {
            grid-column: span 2;
        }
        
        .gallery-item.medium {
            grid-row: span 1;
        }
    }

    @media (max-width: 768px) {
        header {
            padding: 15px 5%;
        }

        .mobile-toggle {
            display: block;
        }

        nav {
            position: fixed;
            top: 80px;
            left: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.95);
            flex-direction: column;
            padding: 20px;
            gap: 20px;
            transform: translateY(-100%);
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
            z-index: 999;
        }

        nav.active {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        .project-hero h1 {
            font-size: 2.2rem;
        }

        .project-hero p {
            font-size: 1.1rem;
        }

        .section-title h1,
        .section-title h2 {
            font-size: 2rem;
        }

        .section {
            padding: 60px 0;
        }

        .masonry-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            grid-auto-rows: 180px;
            grid-gap: 15px;
        }
        
        .gallery-item.large,
        .gallery-item.medium {
            grid-column: span 1;
            grid-row: span 1;
        }

        .nav-links {
            flex-direction: column;
            gap: 20px;
        }

        .nav-link {
            width: 100%;
        }
        
        .item-overlay {
            padding: 15px;
        }
        
        .item-caption {
            font-size: 0.9rem;
        }
    }

    @media (max-width: 480px) {
        .project-hero h1 {
            font-size: 1.8rem;
        }

        .masonry-grid {
            grid-template-columns: 1fr;
            grid-auto-rows: 250px;
        }
        
        .gallery-item.large,
        .gallery-item.medium,
        .gallery-item.small {
            grid-column: span 1;
            grid-row: span 1;
        }

        .project-meta {
            flex-direction: column;
            gap: 15px;
        }

        .cta-content h1 {
            font-size: 2.2rem;
        }
        
        .item-type {
            font-size: 0.7rem;
            padding: 4px 10px;
        }
    }
</style>

<Layout>
