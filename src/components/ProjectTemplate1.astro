// Funzione per determinare dimensione CSS in base al tipo e ordine
const getItemSize = (item, index) => {
    // Usa la size definita o calcolala dinamicamente
    if (item.size) return item.size;
    
    // Pattern irregolare: grande ogni 3 elementi, medio ogni 2, piccolo gli altri
    if (index % 5 === 0) return "large";
    if (index % 3 === 0) return "medium";
    return "small";
};

// Aggiungi size a ogni elemento
const mediaWithSize = media.map((item, index) => ({
    ...item,
    displaySize: getItemSize(item, index)
}));
