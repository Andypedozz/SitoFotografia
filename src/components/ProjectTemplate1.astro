                        <li>
                            <span class="info-label">Anno</span>
                            <span class="info-value">{project.anno}</span>
                        </li>
                        <li>
                            <span class="info-label">Luogo</span>
                            <span class="info-value">{project.location}</span>
                        </li>
                        <li>
                            <span class="info-label">Attrezzatura</span>
                            <span class="info-value">{project.equipment}</span>
                        </li>
                        <li>
                            <span class="info-label">Team</span>
                            <span class="info-value">{project.team}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- GALLERIA MISTA - Immagini e Video -->
    {mediaWithSize.length > 0 && (
        <section class="section project-gallery">
            <div class="container">
                <div class="section-title">
                    <h2>Galleria del Progetto</h2>
                </div>
                
                <div class="masonry-grid">
                    {mediaWithSize.map((item, index) => (
                        <div 
                            class={`gallery-item fade-in ${item.type}-item ${item.displaySize}`}
                            data-type={item.type}
                            data-index={index}
                            onclick={`openMediaModal(${index})`}
                        >
                            {item.type === 'image' ? (
                                <>
                                    <img 
                                        src={item.filePath} 
                                        alt={item.caption || `${project.nome} - Elemento ${index + 1}`}
                                        loading="lazy"
                                    />
                                    <span class="item-type">
                                        <i class="fas fa-image"></i> Immagine
                                    </span>
                                </>
                            ) : (
                                <>
                                    <div class="video-wrapper">
                                        <video 
                                            src={item.filePath}
                                            poster={item.poster}
                                            preload="metadata"
                                            muted
                                            loop
                                        ></video>
                                        <div class="video-play-btn">
                                            <i class="fas fa-play"></i>
                                        </div>
                                    </div>
                                    <span class="item-type">
                                        <i class="fas fa-video"></i> Video
                                    </span>
                                </>
                            )}
                            
                            <div class="item-overlay">
                                {item.title && (
                                    <h3 class="item-title">{item.title}</h3>
                                )}
                                {item.caption && (
                                    <p class="item-caption">{item.caption}</p>
