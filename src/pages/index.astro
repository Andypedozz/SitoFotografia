---
import ProjectCard from "../components/Home/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";

const url = new URL("/api/projects", Astro.request.url);
const res = await fetch(url);
const homeProjects = await res.json();

---
<style>
    /* Reset e variabili */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    :root {
        --primary: #947752;
        --primary-dark: #695234;
        --dark: #000000;
        --dark-gray: #222222;
        --light-gray: #333333;
        --text-light: #ffffff;
        --text-gray: #cccccc;
        --transition: all 0.3s ease;
        --transition-slow: all 0.5s ease;
        --shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
        --radius: 8px;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--dark);
        color: var(--text-light);
        margin: 0;
        line-height: 1.6;
        overflow-x: hidden;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    button {
        cursor: pointer;
        font-family: inherit;
    }

    .container {
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section {
        padding: 80px 0;
    }

    .section-title {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 15px;
        margin-bottom: 50px;
    }

    .section-title h1,
    .section-title h2 {
        font-size: 2.5rem;
        text-align: center;
        font-weight: 600;
    }

    .btn {
        display: inline-block;
        padding: 12px 28px;
        background-color: var(--primary);
        color: var(--text-light);
        border: none;
        border-radius: var(--radius);
        font-size: 16px;
        font-weight: 600;
        transition: var(--transition);
    }

    .btn:hover {
        background-color: var(--primary-dark);
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-outline {
        background-color: transparent;
        border: 2px solid var(--primary);
    }

    .btn-outline:hover {
        background-color: var(--primary);
    }

    /* Header */
    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 20px 5%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: rgba(0, 0, 0, 0.9);
        z-index: 1000;
        transition: var(--transition);
    }

    header.scrolled {
        padding: 15px 5%;
        backdrop-filter: blur(10px);
        background-color: rgba(0, 0, 0, 0.85);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .logo img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
    }

    .logo-text {
        font-size: 1.5rem;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .logo-text span {
        color: var(--primary);
    }

    nav {
        display: flex;
        align-items: center;
        gap: 25px;
    }

    nav a {
        font-weight: 500;
        position: relative;
        padding: 5px 0;
    }

    nav a:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 2px;
        background-color: var(--primary);
        transition: var(--transition);
    }

    nav a:hover:after {
        width: 100%;
    }

    .mobile-toggle {
        display: none;
        font-size: 1.5rem;
        cursor: pointer;
    }

    /* Hero */
    .hero {
        height: 100vh;
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://images.unsplash.com/photo-1516035069371-29a1b244cc32?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80');
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 0 20px;
    }

    .hero h1 {
        font-size: 4rem;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.2;
    }

    .hero p {
        font-size: 1.5rem;
        max-width: 800px;
        margin-bottom: 40px;
        color: var(--text-gray);
    }

    /* Gallery - MODIFICATO: Card più grandi e rettangolari verticali */
    .gallery-section {
        background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgb(22, 22, 22) 100%);
    }

    .gallery {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 35px;
        margin-bottom: 50px;
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        border-radius: var(--radius);
        height: 500px; /* Aumentata da 400px a 500px */
        transition: var(--transition-slow);
        aspect-ratio: 3/4; /* Proporzione più verticale */
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition-slow);
        filter: grayscale(100%) brightness(0.9);
    }

    .gallery-item:hover {
        transform: translateY(-15px);
        box-shadow: var(--shadow);
    }

    .gallery-item:hover img {
        filter: grayscale(0%) brightness(1);
        transform: scale(1.08);
    }

    .gallery-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 25px;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.95));
        opacity: 0;
        transition: var(--transition-slow);
        transform: translateY(20px);
    }

    .gallery-item:hover .gallery-overlay {
        opacity: 1;
        transform: translateY(0);
    }

    .gallery-overlay h3 {
        font-size: 1.5rem;
        margin-bottom: 8px;
    }

    .gallery-overlay p {
        font-size: 1rem;
        color: var(--text-gray);
    }

    .center-btn {
        text-align: center;
    }

    /* About */
    .about-section {
        background: linear-gradient(90deg, rgba(0, 0, 0, 1) 0%, rgb(24, 24, 24) 50%, rgba(0, 0, 0, 1) 100%);
    }

    .about-content {
        display: flex;
        align-items: center;
        gap: 60px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .about-image {
        flex: 1;
        position: relative;
    }

    .portrait {
        width: 100%;
        max-width: 400px;
        height: 400px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto;
        position: relative;
        border: 5px solid rgba(148, 119, 82, 0.3);
        box-shadow: 0 0 30px rgba(148, 119, 82, 0.2);
    }

    .portrait img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .about-text {
        flex: 1;
    }

    .about-text h2 {
        font-size: 2.5rem;
        margin-bottom: 25px;
    }

    .about-text p {
        font-size: 1.2rem;
        color: var(--text-gray);
        margin-bottom: 30px;
    }

    /* Services - MODIFICATO: Effetto hover migliorato */
    .services-section {
        background: radial-gradient(circle, rgba(0, 0, 0, 1) 0%, rgb(22, 22, 22) 70%, rgba(0, 0, 0, 1) 100%);
    }

    .services {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 35px;
    }

    .service-card {
        background-color: var(--dark-gray);
        border-radius: var(--radius);
        padding: 40px 30px;
        text-align: center;
        transition: var(--transition-slow);
        border: 1px solid rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

    /* Effetto glow sull'hover */
    .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, transparent, rgba(148, 119, 82, 0.1), transparent);
        transform: translateX(-100%);
        transition: transform 0.7s ease;
        z-index: -1;
    }

    .service-card:hover {
        transform: translateY(-10px) scale(1.02);
        background-color: #2a2a2a;
        border-color: var(--primary);
        box-shadow: 0 15px 30px rgba(148, 119, 82, 0.15);
    }

    .service-card:hover::before {
        transform: translateX(100%);
    }

    /* Animazione progressiva dei contenuti */
    .service-card .service-icon,
    .service-card h3,
    .service-card p,
    .service-card .btn {
        transition: all 0.4s ease 0.1s;
        opacity: 1;
        transform: translateY(0);
    }

    .service-card:hover .service-icon {
        transform: scale(1.1) translateY(-5px);
        color: #ffd18c;
    }

    .service-card:hover h3 {
        transform: translateY(-5px);
        color: var(--primary);
    }

    .service-card:hover p {
        transform: translateY(-3px);
    }

    .service-card:hover .btn {
        transform: translateY(-3px);
        background-color: var(--primary-dark);
    }

    .service-icon {
        font-size: 3.2rem;
        color: var(--primary);
        margin-bottom: 25px;
        transition: var(--transition-slow);
    }

    .service-card h3 {
        font-size: 1.6rem;
        margin-bottom: 18px;
        transition: var(--transition-slow);
    }

    .service-card p {
        color: var(--text-gray);
        margin-bottom: 28px;
        transition: var(--transition-slow);
    }

    /* CTA */
    .cta-section {
        background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('https://images.unsplash.com/photo-1542744095-fcf48d80b0fd?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
        text-align: center;
    }

    .cta-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .cta-content h1 {
        font-size: 3rem;
        margin-bottom: 25px;
    }

    .cta-content p {
        font-size: 1.2rem;
        color: var(--text-gray);
        margin-bottom: 40px;
    }

    /* Footer */
    footer {
        background-color: #070707;
        padding: 60px 0 30px;
    }

    .footer-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 40px;
        margin-bottom: 40px;
    }

    .footer-col {
        flex: 1;
        min-width: 250px;
    }

    .footer-col h3 {
        font-size: 1.3rem;
        margin-bottom: 20px;
        color: var(--primary);
    }

    .footer-col p {
        color: var(--text-gray);
        margin-bottom: 10px;
    }

    .social-links {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }

    .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background-color: var(--light-gray);
        border-radius: 50%;
        transition: var(--transition);
    }

    .social-links a:hover {
        background-color: var(--primary);
        transform: translateY(-3px);
    }

    .copyright {
        text-align: center;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        color: var(--text-gray);
        font-size: 0.9rem;
    }

    /* Animazioni */
    .fade-in {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.8s ease, transform 0.8s ease;
    }

    .fade-in.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* Responsive */
    @media (max-width: 1200px) {
        .gallery {
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        }
    }

    @media (max-width: 1024px) {
        .hero h1 {
            font-size: 3rem;
        }

        .about-content {
            flex-direction: column;
            text-align: center;
        }

        .gallery-item {
            height: 450px;
        }
    }

    @media (max-width: 768px) {
        header {
            padding: 15px 5%;
        }

        .mobile-toggle {
            display: block;
        }

        nav {
            position: fixed;
            top: 80px;
            left: 0;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.95);
            flex-direction: column;
            padding: 20px;
            gap: 20px;
            transform: translateY(-100%);
            opacity: 0;
            visibility: hidden;
            transition: var(--transition);
            z-index: 999;
        }

        nav.active {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        .hero h1 {
            font-size: 2.5rem;
        }

        .hero p {
            font-size: 1.2rem;
        }

        .section-title h1,
        .section-title h2 {
            font-size: 2rem;
        }

        .section {
            padding: 60px 0;
        }

        .gallery {
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
        }

        .gallery-item {
            height: 400px;
        }
    }

    @media (max-width: 480px) {
        .hero h1 {
            font-size: 2rem;
        }

        .gallery {
            grid-template-columns: 1fr;
        }

        .gallery-item {
            height: 450px;
        }

        .services {
            grid-template-columns: 1fr;
        }

        .cta-content h1 {
            font-size: 2.2rem;
        }
    }
</style>
